.container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #000;
  overflow: hidden;
  position: relative;
}

.content {
  width: 100%;
  max-width: 750rpx;
  height: 100%;
  position: relative;
  transition: all 0.5s;
}

.transition-mask {
  position: absolute;
  inset: 0;
  background-color: #000;
  z-index: 50;
  transition: opacity 0.3s;
}

.scale-95 {
  transform: scale(0.95);
}

.scale-100 {
  transform: scale(1);
}

.opacity-0 {
  opacity: 0;
}

.opacity-100 {
  opacity: 1;
} 