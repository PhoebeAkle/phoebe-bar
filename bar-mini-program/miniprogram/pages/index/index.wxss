.container {
  width: 100%;
  height: 100vh;
  position: relative;
  background-color: #000;
}

.content {
  width: 100%;
  height: 100%;
  position: relative;
  transition: all 0.3s ease;
}

.transition-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #000;
  z-index: 1000;
  pointer-events: none;
  transition: opacity 0.3s ease;
}

.scale-95 {
  transform: scale(0.95);
}

.scale-100 {
  transform: scale(1);
}

.opacity-0 {
  opacity: 0;
}

.opacity-100 {
  opacity: 1;
} 