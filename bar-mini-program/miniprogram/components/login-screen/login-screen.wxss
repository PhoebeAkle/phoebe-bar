.login-container {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.bg-image {
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0.5;
  z-index: 0;
}

.login-form {
  width: 92%;
  max-width: 600rpx;
  background-color: rgba(0, 0, 0, 0.7);
  backdrop-filter: blur(10px);
  border-radius: 40rpx;
  padding: 48rpx;
  z-index: 1;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
  border: 2rpx solid rgba(255, 105, 180, 0.3);
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  text-align: center;
  margin-bottom: 48rpx;
}

.tabs-list {
  display: flex;
  background-color: rgba(31, 41, 55, 0.5);
  border: 2rpx solid rgba(255, 105, 180, 0.3);
  border-radius: 16rpx;
  margin-bottom: 48rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  color: #fff;
  transition: all 0.3s;
}

.tab.active {
  background-color: #ff69b4;
  color: #fff;
}

.form-group {
  margin-bottom: 32rpx;
}

.label {
  display: block;
  color: #fff;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.input {
  width: 100%;
  background-color: rgba(31, 41, 55, 0.5);
  border: 2rpx solid rgba(255, 105, 180, 0.3);
  border-radius: 16rpx;
  padding: 24rpx;
  color: #fff;
  font-size: 28rpx;
}

.input::placeholder {
  color: rgba(156, 163, 175, 1);
}

.code-input-group {
  display: flex;
  gap: 16rpx;
}

.code-input {
  flex: 1;
}

.code-btn {
  width: 200rpx;
  background-color: rgba(31, 41, 55, 0.5);
  border: 2rpx solid rgba(255, 105, 180, 0.3);
  color: #fff;
  font-size: 24rpx;
  padding: 0;
  line-height: 88rpx;
}

.code-btn.disabled {
  opacity: 0.5;
}

.error {
  color: #f87171;
  font-size: 24rpx;
  margin-bottom: 16rpx;
  display: block;
}

.submit-btn {
  width: 100%;
  background: linear-gradient(to right, #ff69b4, #8a2be2);
  color: #fff;
  font-weight: 500;
  padding: 24rpx 0;
  border-radius: 16rpx;
  margin-top: 32rpx;
  transition: all 0.3s;
}

.submit-btn:active {
  transform: scale(0.95);
}

.skip-btn {
  text-align: center;
  color: rgba(156, 163, 175, 1);
  font-size: 24rpx;
  margin-top: 48rpx;
}

.skip-btn:active {
  color: #ff69b4;
} 