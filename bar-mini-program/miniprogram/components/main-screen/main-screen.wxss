.main-container {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
}

.bg-image {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 1;
  padding: 32rpx;
}

.features-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 48rpx;
  width: 100%;
  max-width: 600rpx;
  margin-top: auto;
  margin-bottom: 192rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(10px);
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
  border: 2rpx solid rgba(255, 105, 180, 0.3);
  transition: all 0.3s;
}

.feature-item:active {
  transform: scale(1.1);
  background-color: rgba(0, 0, 0, 0.7);
  border-color: rgba(255, 105, 180, 0.5);
}

.feature-icon {
  width: 96rpx;
  height: 96rpx;
  margin-bottom: 24rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.3));
}

.feature-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #fff;
}

.nav-bar {
  height: 160rpx;
  background-color: rgba(0, 0, 0, 0.8);
  backdrop-filter: blur(10px);
  border-top: 2rpx solid rgba(255, 105, 180, 0.3);
  display: flex;
  align-items: center;
  justify-content: space-around;
  z-index: 1;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 33.33%;
  padding: 16rpx 0;
  transition: all 0.3s;
}

.nav-item:active {
  transform: scale(1.1);
}

.nav-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
  opacity: 0.4;
}

.nav-item.active .nav-icon {
  opacity: 1;
}

.nav-label {
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(156, 163, 175, 1);
}

.nav-item.active .nav-label {
  color: #ff69b4;
} 